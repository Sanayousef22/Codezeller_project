@using Codezeller.Models
@{ 
    Blog blog = ViewBag.blog;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <title>Code Zeller</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/owl.carousel.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="/css/style.css">

</head>
<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

    <!-- PRE LOADER -->
    <section class="preloader">
        <div class="spinner">

            <span class="spinner-rotate"></span>

        </div>
    </section>


    <!-- MENU -->
    @Html.Partial("nav")

    <section>
        <div class="container">
            <h2>@blog.title</h2>

            <p class="lead">
            </p>
            @if (blog.image == null)
            {
                <img src="images/other-image-fullscreen-1-1920x700.jpg" class="img-responsive" alt="">
            }
            else
            {
                <img style="height:700px; width:1920;" src="@blog.image" class="img-responsive" alt="">
            }

            <br>
            @foreach (BlogContent item in ViewBag.content)
            {
                <h3>@item.title</h3>
                <p>@item.content</p>
                <br>
            }

            <br>
        </div>
    </section>

    <!-- FOOTER -->
    @Html.Partial("footer")

    <!-- SCRIPTS -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/smoothscroll.js"></script>
    <script src="/js/custom.js"></script>

</body>
</html>